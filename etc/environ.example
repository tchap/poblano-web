#------------------------------------------------------------------------------
# Global
#------------------------------------------------------------------------------

POBLANO_REPO='-abs-path-'
POBLANO_HOME="-abs-path-"

#------------------------------------------------------------------------------
# Supervisord
#------------------------------------------------------------------------------

POBLANO_SUPERVISOR_CONFIG="$POBLANO_REPO/etc/supervisord.conf"

#------------------------------------------------------------------------------
# Poblano Frontend
#------------------------------------------------------------------------------

export POBLANO_HTTP_PORT='8080'
export POBLANO_HTTP_FORWARDED_HOST=''
export POBLANO_HTTP_PATH_PREFIX=''
export POBLANO_HTTP_PROXY_ENABLED='yes'

export POBLANO_SESSION_SECRET='-random-string-'

export POBLANO_GITHUB_CLIENT_ID='-github-client-id-'
export POBLANO_GITHUB_CLIENT_SECRET='-github-client-secret-'

#------------------------------------------------------------------------------
# Poblano Backend
#------------------------------------------------------------------------------

export POBLANO_MONGODB_HOST='127.0.0.1'
export POBLANO_MONGODB_PORT='27017'

export POBLANO_MONGODB_DBPATH="$POBLANO_HOME/mongodb"
export POBLANO_MONGODB_LOGPATH="$POBLANO_HOME/mongodb.log"
